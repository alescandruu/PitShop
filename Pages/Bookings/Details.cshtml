@page
@model PitShop.Pages.Bookings.DetailsModel

@{
    ViewData["Title"] = "Details";
}
@{
    var carName = HttpContext.Request.Query["carName"].ToString();
}

<h1>Details</h1>

<div>
    <h4>Booking</h4>
    <hr />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Car)
        </dt>
        <dd class="col-sm-10">
            @carName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Mechanic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.MechanicName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Booking?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
