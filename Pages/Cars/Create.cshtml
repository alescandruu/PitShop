@page
@model PitShop.Pages.Cars.CreateModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.UserId" class="form-control" value="@UserManager.GetUserId(User)" />
            <div class="form-group">
                <label asp-for="Car.Brand" class="control-label"></label>
                <input asp-for="Car.Brand" class="form-control" />
                <span asp-validation-for="Car.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ProductionDate" class="control-label"></label>
                <input asp-for="Car.ProductionDate" class="form-control" />
                <span asp-validation-for="Car.ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.EngineCapacity" class="control-label"></label>
                <input asp-for="Car.EngineCapacity" class="form-control" />
                <span asp-validation-for="Car.EngineCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Fuel" class="control-label"></label>
                <input asp-for="Car.Fuel" class="form-control"/>
                <span asp-validation-for="Car.Fuel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Power" class="control-label"></label>
                <input asp-for="Car.Power" class="form-control" />
                <span asp-validation-for="Car.Power" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
