<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pitshop.Pages.MakeAppointmentPage"
             Title="MakeAppointmentPage"
             >
    <ContentPage.Resources>
        <Style x:Key="InvalidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="Red" />
        </Style>
        <Style x:Key="ValidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="Green" />
        </Style>
    </ContentPage.Resources>
    <StackLayout>
        <Button Text="Home"
        Clicked="HomeButtonClicked"
        CornerRadius="0"
        BackgroundColor="Black" />
        <Entry Placeholder="Name"
           x:Name="NameField" />
        <Entry Placeholder="Email"
               x:Name="EmailField">
        </Entry>
        <Entry Placeholder="Plate"
           x:Name="PlateField" MaxLength="7"/>
        <Entry Placeholder="Car Model"
           x:Name="CarModelField" />
        <Entry Placeholder="Issue"
           x:Name="IssueField" />
        <DatePicker x:Name="DateField" />
        <TimePicker x:Name="TimeField" />
        <Button Text="Make Appointment"
            Clicked="OnMakeAppointmentButtonClicked" 
            CornerRadius="0"
            BackgroundColor="Black"/>
    </StackLayout>
</ContentPage>